---

<div class="component-container">
  <div class="info-box">
    <p>
      <strong>Quick reference directory:</strong> Contact information and links for agencies managing Sierra Nevada wilderness areas, roads, and backcountry access.
    </p>
  </div>

  <div class="agencies-grid">
    {agencies.map(agency => (
      <article>
        <header>
          <hgroup>
            <h3>{agency.name}</h3>
          </hgroup>
          <span class={`badge badge-${agency.type.toLowerCase().replace(' ', '-')}`}>
            {agency.type}
          </span>
        </header>

        {agency.description && (
          <p class="agency-description">{agency.description}</p>
        )}

        <div class="category-tag">
          <small>
            {agency.region === 'all' ? 'All Regions' :
             agency.region === 'north' ? 'North Sierra' :
             agency.region === 'central' ? 'Central Sierra' :
             agency.region === 'south' ? 'South Sierra' :
             'Eastern Sierra'}
          </small>
        </div>

        <footer>
          <div class="agency-links">
            {agency.website && (
              <a href={agency.website} target="_blank" rel="noopener noreferrer" role="button" class="secondary">
                üåê Website
              </a>
            )}
            {agency.facebook && (
              <a href={agency.facebook} target="_blank" rel="noopener noreferrer" role="button" class="secondary">
                üìò Facebook
              </a>
            )}
            {agency.x && (
              <a href={agency.x} target="_blank" rel="noopener noreferrer" role="button" class="secondary">
                üê¶ X
              </a>
            )}
            {agency.phone && (
              <a href={`tel:${agency.phone}`} role="button" class="secondary">
                üìû {agency.phone}
              </a>
            )}
          </div>
        </footer>
      </article>
    ))}
  </div>
</div>

<style>
  .agencies-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.25rem;
    margin-bottom: 1.5rem;
  }

  article header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 0.75rem;
  }

  article hgroup {
    flex: 1;
  }

  article hgroup h3 {
    margin-bottom: 0.5rem;
  }

  article hgroup p {
    margin: 0;
    font-size: 0.875rem;
    color: var(--pico-muted-color);
  }

  .agency-description {
    color: var(--pico-muted-color);
    font-size: 0.9375rem;
    margin: 0 0 1rem 0;
  }

  @media (max-width: 768px) {
    .agencies-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Badge color variants */
  .badge-nps {
    background-color: color-mix(in srgb, #2563eb 20%, transparent);
    color: #2563eb;
  }

  .badge-nfs {
    background-color: color-mix(in srgb, var(--primary) 20%, transparent);
    color: var(--primary);
  }

  .badge-county {
    background-color: color-mix(in srgb, #dc2626 20%, transparent);
    color: #dc2626;
  }

  .badge-state {
    background-color: color-mix(in srgb, #7c3aed 20%, transparent);
    color: #7c3aed;
  }

  .badge-other {
    background-color: var(--pico-muted-color);
    color: var(--pico-background-color);
    opacity: 0.7;
  }

  .agency-links {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
</style>
