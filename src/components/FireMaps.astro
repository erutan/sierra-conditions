---
// Fire & Smoke Interactive Maps Component
interface MapTab {
  id: string;
  name: string;
  description: string;
  url: string;
  details: string;
  icon?: string;
}

const mapTabs: MapTab[] = [
  {
    id: 'watchduty',
    name: 'Watch Duty',
    description: 'Live fire map aggregating info from multiple jurisdictions',
    details: 'Best for: Real-time fire locations and perimeter tracking across CA',
    url: 'https://app.watchduty.org',
    icon: 'üî•'
  },
  {
    id: 'airnow',
    name: 'AirNow Fire & Smoke',
    description: 'Combined high-quality and real-time air quality sensors',
    details: 'Best for: Most accurate AQI readings from official EPA sensors',
    url: 'https://fire.airnow.gov',
    icon: 'üå´Ô∏è'
  },
  {
    id: 'purpleair',
    name: 'Purple Air',
    description: 'Real-time air quality sensors with historical data',
    details: 'Best for: Fastest updates and historical hourly data',
    url: 'https://www.purpleair.com/map?opt=1/mAQI/a10/cC0#8.02/37.519/-118.825',
    icon: 'üí®'
  },
  {
    id: 'windy',
    name: 'Windy AQI',
    description: 'Wind patterns and 3-day air quality forecast',
    details: 'Best for: Understanding how smoke will move with wind patterns',
    url: 'https://www.windy.com/-PM2-5-pm2p5?pm2p5,37.810,-119.221,8',
    icon: 'üå¨Ô∏è'
  },
  {
    id: 'bluesky',
    name: 'BlueSky Forecast',
    description: '3-day smoke forecast showing basin and valley settling',
    details: 'Best for: Planning trips 1-3 days ahead based on smoke predictions',
    url: 'https://tools.airfire.org/websky/v2/run/standard/CANSAC-1.33km',
    icon: 'üìä'
  },
];
---

<div class="component-container">
  <div class="info-box">
    <p>
      <strong>Fire & smoke monitoring resources:</strong> Quick access to live fire maps, air quality sensors,
      and smoke forecasts. Each service opens in a new tab with full interactive features.
    </p>
  </div>

  <div class="maps-grid">
    {mapTabs.map((tab) => (
      <article>
        <header>
          <div class="map-icon">{tab.icon}</div>
          <hgroup>
            <h3>{tab.name}</h3>
            <p>{tab.description}</p>
          </hgroup>
        </header>
        <p class="map-details">{tab.details}</p>
        <footer>
          <a href={tab.url} target="_blank" rel="noopener noreferrer" role="button" class="secondary">
            Launch Map ‚Üí
          </a>
        </footer>
      </article>
    ))}
  </div>

  <div class="section-footer">
    <p>
      <small>
        üí° <strong>Tip:</strong> Check multiple sources for the complete picture. Purple Air updates fastest (every 2 min),
        AirNow is most accurate (hourly), and BlueSky provides 72-hour forecasts.
      </small>
    </p>
  </div>
</div>

<style>
  .maps-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.25rem;
    margin-bottom: 1.5rem;
  }

  article {
    transition: transform 0.2s ease;
  }

  article:hover {
    transform: translateY(-2px);
  }

  article header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .map-icon {
    font-size: 2rem;
    line-height: 1;
    flex-shrink: 0;
  }

  article hgroup {
    flex: 1;
  }

  article hgroup h3 {
    margin-bottom: 0.5rem;
  }

  article hgroup p {
    margin: 0;
    font-size: 0.9375rem;
    color: var(--pico-muted-color);
  }

  .map-details {
    color: var(--pico-muted-color);
    font-size: 0.875rem;
    font-style: italic;
    margin: 0 0 1rem 0;
    padding-top: 0.75rem;
    border-top: 1px solid var(--border-color);
  }

  article footer {
    margin-top: auto;
  }

  @media (max-width: 768px) {
    .maps-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
