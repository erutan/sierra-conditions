---
// Fire & Smoke Interactive Maps Component
interface MapTab {
  id: string;
  name: string;
  url: string;
  details: string;
  icon?: string;
  category: 'Current' | 'Forecast';
}

const mapTabs: MapTab[] = [
  {
    id: 'watchduty',
    name: 'Watch Duty',
    details: 'Best for: Real-time fire locations, perimeter tracking, and multiagency updates',
    url: 'https://app.watchduty.org',
    icon: 'üî•',
    category: 'Current'
  },
  {
    id: 'airnow',
    name: 'AirNow Fire & Smoke',
    details: 'Best for: Most accurate AQI readings from official EPA sensors + Purple Air',
    url: 'https://fire.airnow.gov',
    icon: 'üå´Ô∏è',
    category: 'Current'
  },
  {
    id: 'purpleair',
    name: 'Purple Air',
    details: 'Best for: real-time air quality sensors and historical hourly data',
    url: 'https://www.purpleair.com/map?opt=1/mAQI/a10/cC0#8.02/37.519/-118.825',
    icon: 'üí®',
    category: 'Current'
  },
  {
    id: 'google-aqi',
    name: 'Google Maps AQI',
    details: 'Best for: High-level overview extrapolated from multiple data sources (with hours of lag).',
    url: 'https://www.google.com/maps/@37.5069579,-118.702057,9.24z/data=!5m1!1e9?entry=ttu&g_ep=EgoyMDI1MDgyNS4wIKXMDSoASAFQAw%3D%3D',
    icon: 'üó∫Ô∏è',
    category: 'Current'
  },
  {
    id: 'nasa-worldview',
    name: 'NASA Worldview',
    details: 'Best for: Visual analysis of how smoke has spread over the past few days',
    url: 'https://worldview.earthdata.nasa.gov/?v=-122.31118585489266,33.45679500585166,-115.98306085489266,39.60619096789932&l=Reference_Labels,Reference_Features(hidden),Coastlines,MODIS_Aqua_CorrectedReflectance_TrueColor(hidden),MODIS_Terra_CorrectedReflectance_TrueColor&lg=false&t=2015-08-24-T00%3A00%3A00Z',
    icon: 'üõ∞Ô∏è',
    category: 'Current'
  },
  {
    id: 'windy',
    name: 'Windy AQI',
    details: 'Best for: Understanding how smoke will move with 3-day forecasted wind patterns',
    url: 'https://www.windy.com/-PM2-5-pm2p5?pm2p5,37.810,-119.221,8',
    icon: 'üå¨Ô∏è',
    category: 'Forecast'
  },
  {
    id: 'bluesky',
    name: 'BlueSky Forecast',
    details: 'Best for: 3-day smoke forecast showing basin and valley settling',
    url: 'https://tools.airfire.org/websky/v2/run/standard/CANSAC-1.33km',
    icon: 'üìä',
    category: 'Forecast'
  },
  {
    id: 'pivotal-weather',
    name: 'Pivotal Weather',
    details: 'Best for: Detailed smoke forecasting using official NOAA models, 48h forecasts',
    url: 'https://www.pivotalweather.com/model.php?m=hrrr&p=smoke_sfc&fh=loop&r=us_sw',
    icon: 'üìà',
    category: 'Forecast'
  },
];
---

<div class="component-container">

  <div class="maps-grid">
    {mapTabs.map((tab) => (
      <article>
        <header>
          <div class="map-icon">{tab.icon}</div>
          <hgroup>
            <h3>
              {tab.name}
              <span class={`badge badge-${tab.category.toLowerCase()}`}>{tab.category}</span>
            </h3>
          </hgroup>
        </header>
        <p class="map-details">{tab.details}</p>
        <footer>
          <a href={tab.url} target="_blank" rel="noopener noreferrer" role="button" class="secondary">
            Launch Map ‚Üí
          </a>
        </footer>
      </article>
    ))}
  </div>

  <div class="info-box">
    <p>
      <small>
        üí° <strong>Tip:</strong> Check multiple sources for the complete picture. Current data: Purple Air updates fastest (every 2 min),
        AirNow is most accurate (hourly). Forecasts: BlueSky and Pivotal Weather provide 48-72 hour predictions.
      </small>
    </p>
  </div>
</div>

<style>
  .maps-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.25rem;
    margin-bottom: 1.5rem;
  }

  article {
    transition: transform 0.2s ease;
  }

  article:hover {
    transform: translateY(-2px);
  }

  article header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .map-icon {
    font-size: 2rem;
    line-height: 1;
    flex-shrink: 0;
  }

  article hgroup {
    flex: 1;
  }

  article hgroup h3 {
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .badge {
    display: inline-block;
    padding: 0.125rem 0.5rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    border-radius: 0.25rem;
    letter-spacing: 0.025em;
  }

  .badge-current {
    background-color: rgba(72, 187, 120, 0.2);
    color: rgb(72, 187, 120);
  }

  .badge-forecast {
    background-color: rgba(66, 153, 225, 0.2);
    color: rgb(66, 153, 225);
  }

  article hgroup p {
    margin: 0;
    font-size: 0.9375rem;
    color: var(--pico-muted-color);
  }

  .map-details {
    color: var(--pico-muted-color);
    font-size: 0.875rem;
    font-style: italic;
    margin: 0 0 1rem 0;
    padding-top: 0.75rem;
    border-top: 1px solid var(--border-color);
  }

  article footer {
    margin-top: auto;
  }

  @media (max-width: 768px) {
    .maps-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
